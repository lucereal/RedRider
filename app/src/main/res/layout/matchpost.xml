<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/borderblack">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.2">

    <TextView
        android:id="@+id/matchPst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MATCH FOUND"
        android:textColor="#FFFF00"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/postDestMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/postDateMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/postNameMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/postMajorMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="18dp"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="1.4">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptBtn"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_marginBottom="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/declineBtn"
            android:src="@drawable/ic_close_black_24dp"
           />
        <TextView
            android:id="@+id/acceptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#FFFF00"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>
